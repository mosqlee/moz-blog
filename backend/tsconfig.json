{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },

        "rootDir": "src",

        "outDir": "dist",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./node_modules/koa-body",
            "types/index"
        ],
        "strictPropertyInitialization": false,
        "strict": true,
        "jsx": "preserve",
        "jsxFactory": "h",
        "allowSyntheticDefaultImports": false,
        "experimentalDecorators": true,
        "allowJs": true,
        "module": "commonjs",
        "target": "es2017",
        "moduleResolution": "node",

        "noImplicitAny": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es7",
            "es2015.promise"
        ],
        "sourceMap": true,
        "pretty": true
    }
}